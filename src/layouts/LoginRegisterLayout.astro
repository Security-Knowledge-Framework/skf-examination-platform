---
import { LoadUser } from "../components/LoadUser";
import Nav from "../components/Nav.astro";
import BackgroundLogo from "../components/svgs/BackgroundLogo.astro";
import "../css/base.css";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body>
    <div class="logo">
      <BackgroundLogo />
    </div>
    <LoadUser client:load />
    <div class="wrapper">
      <slot />
    </div>
  </body>
</html>

<style>
  .wrapper {
    display: flex;
    flex-direction: row;
    align-items: center;
    height: 100vh;
    z-index: 10;
  }

  .logo {
    position: absolute;
    z-index: 0;
  }
</style>
